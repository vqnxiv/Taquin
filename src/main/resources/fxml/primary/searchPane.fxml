<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.vqnxiv.taquin.controller.SearchPaneController" >
    
    <children>

        <!-- buttons -->
        <ToolBar VBox.vgrow="NEVER">
            <items>
                <Button fx:id="addBuilderButton"  minWidth="50.0" onAction="#onAddBuilderActivated" mnemonicParsing="false" text="Add" />
                <!--
                <Button minWidth="50.0" mnemonicParsing="false" text="Run" />
                <Button minWidth="50.0" mnemonicParsing="false" text="Pause" />
                <Button minWidth="50.0" mnemonicParsing="false" text="Stop" />
                -->
            </items>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
        </ToolBar>

        <!-- add status here -->

        <!-- runners -->
        <ScrollPane VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="35" fx:id="builderVBox">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

    </children>
</VBox>
